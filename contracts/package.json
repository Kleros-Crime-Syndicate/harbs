    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-watcher": "^2.3.0",
    "json-schema": "^0.4.0",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "shelljs": "^0.8.5",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.8.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.4"
